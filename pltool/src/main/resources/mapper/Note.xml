<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.pltool.mapper.NoteMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.pltool.domain.entity.Note">
        <id column="id" property="id" />
        <result column="uuid" property="uuid" />
        <result column="title" property="title" />
        <result column="summary" property="summary" />
        <result column="user_id" property="userId" />
        <result column="type" property="type"/>
        <result column="ref_uuid" property="refUuid"/>
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="content" property="content"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , uuid, title, summary, user_id, type, ref_uuid, create_time, update_time, content
    </sql>

</mapper>
